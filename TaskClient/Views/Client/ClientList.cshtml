@model ClientListModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Client List";
}
<h1>@ViewData["Title"]</h1>
<br />
<a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Update" asp-route-id="0">New</a>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>CUIT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.ClientList)
        {
            <tr>
                <td>@client.Id</td>
                <td>@client.Name</td>
                <td>@client.Address</td>
                <td>@client.PhoneNumber</td>
                <td>@client.CUIT</td>
                <td>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Update" asp-route-id="@client.Id">Update</a>
                </td>
                <td>
                    <a class="nav-link text-warning" asp-area="" asp-controller="Client" asp-action="Delete" asp-route-id="@client.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>